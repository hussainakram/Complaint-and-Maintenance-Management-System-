
<div class="container">
	<div class="row">
		<div class="col-md-12">
		<%= form_for(:users, url: {action: 'index', id: @user.id}, method: :put) do |user| %>	
			<caption><h3>Complaints by 
				<!-- Split button -->
				<div class='btn-group'>
				  <button type='button' class='btn btn-success'><%= "#{@user.first_name} #{@user.last_name}" %></button>
				  <button type='button' class='btn btn-default dropdown-toggle' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false'>
				    <span class='caret'></span>
				    <span class='sr-only'>Toggle Dropdown</span>
				  </button>
				  <ul class='dropdown-menu'>
				    <li><%= link_to "Edit details", {:action => 'edit'}, :id => "user_details" %>	</li>
				  </ul>
				</div>
			</h3></caption>
			<hr>
			<table class="table table-hover table-bordered centre">
				<th>Complaint ID</th>
				<th>Title</th>
				<th>Complainer</th>
				<th>Status</th>
				<th>Supervising SDO</th>
				<th>Assigned Worker</th>
				<th>Updated at</th>
				<% @user_complaints.each do |complaint| %>
				<tr>
					<td><%= complaint.id %> </td>
					<td><%= complaint.title %></td>
					<td><%= @user.first_name%> <%= @user.last_name %> </td>
					<td><%= complaint.status %></td>
					</td>
					<% if complaint.sdo.present? %>
						<td> <%= complaint.sdo.name %> </td>
					 <% end %>
					 <% if complaint.worker.present? %>
					<td><%= complaint.worker.full_name %></td>
					<% end %>
					<td><%= complaint.updated_at %></td>
				</tr>
				<% end %>
			</table> 
			<div>
				<%= link_to("Create New Complaint",new_complaint_path, class: 'action create btn btn-sm btn-default' ) %>
			</div>
		<% end %>
		</div>
	</div>
</div>