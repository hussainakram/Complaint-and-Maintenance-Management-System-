<div class="container">
	<div class="row">
		<div class="col-md-8">
			<caption><h3>All Complaints</h3></caption>
			<table class="table table-hover table-bordered centre">
				<th>Complaint ID</th>
				<th>Title</th>
				<th>Status</th>
				<th>Actions</th>
				<% @complaints.each do |complaint| %>
				<tr>
					<td><%= complaint.id %> </td>
					<td><%= complaint.title %></td>
					<td><%= complaint.status %></td>
					<td>
						<div class="btn btn-sm btn-default">
							<%= link_to("Show details",{:action => 'show', :id => complaint.id}, :class => 'action show glyphicon glyphicon-file') %>
						</div>
						<div class="btn btn-sm btn-default">
							<%= link_to("Edit",{:action => 'edit', :id => complaint.id}, :class => 'action edit glyphicon glyphicon-edit') %>
						</div>
						<div class="btn btn-sm btn-default">
							<%=link_to "Delete",complaint_path(complaint.id), 'data-method' => :delete, class: "delete glyphicon glyphicon-remove-circle", confirm: "Are you sure ?"%>
						</div>
					</td>
				</tr>
				<% end %>
			</table> 
			<div>
				<%= link_to("Create New Complaint",{:action => 'new'}, :class => 'action create btn btn-sm btn-info') %>
			</div>
		</div>
	</div>
</div>