<div class="container">
	<div class="row">
		<div class="col-md-6">
			<div><%= link_to("Go Back",{action: 'index'}, class: 'btn btn-default') %>				
			</div>
			<div>
				<%= form_for(:complain, url: { action: 'create'}) do |f| %>

					<% @complain.errors.full_messages.each do |msg| %>
			      <li><%= msg %></li>
			    <% end %>

					<table class="table table-bordered">
						<tr>
							<th>Complain Title</th>
							<td><%= f.text_field(:title) %></td>
						</tr>
						<tr>
							<th>Category</th>
							<td><%= f.text_field(:category) %></td>
						</tr>
						<tr>
							<th>Description</th>
							<td><%= f.text_area(:details) %></td>
						</tr>
					</table>
					<div class="form-button">
						<%= submit_tag('Submit Complain') %> 
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
